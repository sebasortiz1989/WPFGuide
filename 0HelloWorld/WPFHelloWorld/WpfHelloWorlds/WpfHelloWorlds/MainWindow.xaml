<Window x:Class="WpfHelloWorlds.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloWorlds"
        mc:Ignorable="d"
        Title="Hello World Window" Height="300" Width="300">
    <StackPanel>
        <Label Content = "Hello Sebas"/>
        <Label>Hello Sebas</Label>
        <Button>
            <Button.FontSize>20</Button.FontSize>
            <Button.Content>Welcome to my world</Button.Content>
            <Button.Foreground>
                <SolidColorBrush Color ="Green" />
            </Button.Foreground>
        </Button>
        <Button>
            <Button.Background>
                <SolidColorBrush Color="Blue"/>
            </Button.Background>
            <Button.Foreground>
                <SolidColorBrush Color="Red"/>
            </Button.Foreground>
            <Button.Content>
                This is a button
            </Button.Content>
        </Button>

        <Button
            x:Name ="myButton"
            Content="Hello new Button"
        ></Button>
        
    </StackPanel>
</Window>
