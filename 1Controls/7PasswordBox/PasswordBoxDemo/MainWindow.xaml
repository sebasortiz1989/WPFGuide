<Window x:Class="PasswordBoxDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordBoxDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <StackPanel Margin="10">
        <Label FontSize="25">Name: </Label>
        <TextBox FontSize="25"></TextBox>
        <Label FontSize="25">Password:</Label>
        <PasswordBox FontSize="25" PasswordChar="*" MaxLength="6"></PasswordBox>
    </StackPanel>
</Window>
