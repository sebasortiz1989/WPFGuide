<Window x:Class="CalendarControlDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarControlDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <StackPanel>
        <Viewbox Stretch="Uniform">
            <Calendar 
                x:Name="myCalendar" 
                SelectedDate="01.01.2022" 
                SelectedDatesChanged="myCalendar_SelectedDatesChanged"
                DisplayMode="Month"
                >
                <Calendar.BlackoutDates>
                    <CalendarDateRange Start="03.05.2021" End="03.09.2021"></CalendarDateRange>
                </Calendar.BlackoutDates>
            </Calendar>
        </Viewbox>
        <TextBlock x:Name="myTextBlock"></TextBlock>
    </StackPanel>
</Window>
