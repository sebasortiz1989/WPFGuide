<Window x:Class="ImageControlDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageControlDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Image Name="myImage" Width="100" Source="/images/Homer_Simpson_2006.png" MouseUp="Image_MouseUp"></Image> <!--Either one is fine-->
        <Image Width="100" Source="pack://application:,,,/images/Homer_Simpson_2006.png"></Image>
    </StackPanel>
</Window>
