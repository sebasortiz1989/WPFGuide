            <Button HorizontalAlignment="Center">Button 3</Button>
            <Button HorizontalAlignment="Center">Button 2</Button>
            <Button HorizontalAlignment="Center">Button 1</Button>
            <Button HorizontalAlignment="Center">Button 44</Button>
            <Button HorizontalAlignment="Center">Button 33</Button>
            <Button HorizontalAlignment="Center">Button 22</Button>
            <Button HorizontalAlignment="Stretch">Button 11</Button>
            <Button HorizontalAlignment="Center">Button 3</Button>
            <Button HorizontalAlignment="Center">Button 2</Button>
            <Button HorizontalAlignment="Center">Button 1</Button>
            <Button HorizontalAlignment="Center">Button 44</Button>
            <Button HorizontalAlignment="Center">Button 33</Button>
            <Button HorizontalAlignment="Center">Button 22</Button>
            <Button HorizontalAlignment="Stretch">Button 11</Button>
            <Button HorizontalAlignment="Center">Button 3</Button>
            <Button HorizontalAlignment="Center">Button 2</Button>
            <Button HorizontalAlignment="Center">Button 1</Button>
            <Button HorizontalAlignment="Center">Button 44</Button>
            <Button HorizontalAlignment="Center">Button 33</Button>
            <Button HorizontalAlignment="Center">Button 22</Button>
            <Button HorizontalAlignment="Stretch">Button 11</Button>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button VerticalAlignment="Bottom">Button1</Button>
                <Button>Button2</Button>
                <Button>Button3</Button>
            </StackPanel>
        </StackPanel>

    </ScrollViewer>

</Window>
