<Window x:Class="OpenFileDialogDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenFileDialogDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"></RowDefinition>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="334,0" Width="124">
            <Button
                Name="OpenFileButton"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="OpenFileButton_Click"
                Content="Open File"
                Margin="5"
            ></Button>
            <Button
                Name="SaveFileButton"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="SaveFileButton_Click"
                Content="Save File"
                Margin="5"
            ></Button>
        </StackPanel>

        <TextBox Name ="myTextBox" Grid.Row="1"/>
    </Grid>
</Window>
